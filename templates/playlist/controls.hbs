<div class="global-volume global-control {{#if controls.expanded}}expanded{{/if}}">
    <header class="playlist-header" data-action="volumeExpand">
        <i class="expand fa-solid fa-angle-up" inert></i>
        <strong>{{ localize "PLAYLIST.VOLUME.CONTROLS" }}</strong>
    </header>
    <div class="expandable">
        <div class="wrapper">
            <ol class="plain">
                <li class="flexrow" data-tooltip="AUDIO.CHANNELS.MUSIC.tooltip">
                    <label>{{ localize "AUDIO.CHANNELS.MUSIC.label" }}</label>
                    <i class="volume-icon fa-solid fa-volume-low" inert></i>
                    {{#with controls.music}}
                    {{ formInput field classes="global-volume-slider" name=name value=modifier dataset=dataset
                                 aria=aria }}
                    {{/with}}
                </li>
                <li class="flexrow" data-tooltip="AUDIO.CHANNELS.ENVIRONMENT.tooltip">
                    <label>{{ localize "AUDIO.CHANNELS.ENVIRONMENT.label" }}</label>
                    <i class="volume-icon fa-solid fa-volume-low" inert></i>
                    {{#with controls.environment}}
                    {{ formInput field classes="global-volume-slider" name=name value=modifier dataset=dataset
                                 aria=aria }}
                    {{/with}}
                </li>
                <li class="flexrow" data-tooltip="AUDIO.CHANNELS.INTERFACE.tooltip">
                    <label>{{ localize "AUDIO.CHANNELS.INTERFACE.label" }}</label>
                    <i class="volume-icon fa-solid fa-volume-low" inert></i>
                    {{#with controls.interface}}
                    {{ formInput field classes="global-volume-slider" name=name value=modifier dataset=dataset
                                 aria=aria }}
                    {{/with}}
                </li>
                {{#if @root.user.isGM}}
                <li class="flexrow" data-tooltip="PLAYLISTENCHANTMENT.Normalize">
                    <label>{{localize "PLAYLISTENCHANTMENT.VolNormalize"}}</label>
                    <i class="volume-icon fas fa-volume-down" inert></i>
                    <div style="flex: 2" class="flexrow">
                        <input data-volume="true" aria-label="{{localize 'PLAYLISTENCHANTMENT.VolNormalize'}}" class="enchantment-volume-slider" name="normalizeModifier" type="range" min="0" max="1" step="0.05" value="{{normalizeModifier}}" data-tooltip="{{normalizeTooltip}}"/>
                        <input type="checkbox" class="enchanment-checkbox" name="normalize" value="true" {{checked enchantment.normalize}}/>
                    </div>                
                </li>
                <li class="flexrow" data-tooltip="PLAYLISTENCHANTMENT.Fade">
                    <label>{{localize "PLAYLISTENCHANTMENT.VolFade"}}</label>
                    <i class="volume-icon fas fa-volume-down" inert></i>
                    <div style="flex: 2" class="flexrow">
                        <input data-unit="ms" aria-label="{{localize 'PLAYLISTENCHANTMENT.VolFade'}}" class="enchantment-volume-slider" name="fadeModifier" type="range" min="0" max="10000" step="50" value="{{enchantment.fadeModifier}}" data-tooltip="{{fadeTooltip}}"/>
                        <input type="checkbox" class="enchanment-checkbox" name="alwaysFade" value="true" {{checked enchantment.alwaysFade}}/>
                    </div>
                </li>
                {{/if}}
            </ol>
        </div>
    </div>
</div>
